<p>
  Here you can export data to JSON format.<br />
</p>
<br />

<%= form_tag "/send_export", :method => "get",'data-type' => 'json' do %>
  <div class="panel panel-default">
    <div class="panel-heading">Place filter</div>
    <div class="panel-body">
      <p>Note: For huge datasets, you may need to wait a few second for the below drop-down to expand.</p>
      <div class="form-group">
        <%= label_tag :places, "Place", :class => 'control-label col-lg-2' %> 
        <div class="col-lg-10">
          <%= select "export_params", "place", @places, {:prompt => 'Select'}, :style => "width:300px" %>
        </div>
      </div>
    </div>
  </div>

  <div class="panel panel-default">
    <div class="panel-heading">Date filter</div>
    <div class="panel-body">
      <div class="form-group">
        <%= label_tag :from_date, "From date", :class => 'control-label col-lg-2' %> 
        <div class="col-lg-10">
          <%= date_select "export_params", "from_date", start_year: 1800, :style => "width:300px" %>
        </div>
      </div>

      <div class="form-group">
        <%= label_tag :to_date, "To date", :class => 'control-label col-lg-2' %> 
        <div class="col-lg-10">
          <%= date_select "export_params", "to_date", start_year: 1800, :style => "width:300px" %>
        </div>
      </div>
    </div>
  </div>

  <%= hidden_field_tag :format, :json %>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= button_tag "Download JSON", :class => 'btn btn-primary' %>
    </div>
  </div>

<% end %>
